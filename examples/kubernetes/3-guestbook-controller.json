{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"guestbook",
      "labels":{
         "app":"guestbook"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"guestbook",
         "io.cilium.lizards.type": "web"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"guestbook",
               "io.cilium.lizards.type": "web"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"guestbook",
                  "image":"cilium/guestbook:latest",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":3000
                     }
                  ],
                  "env":[
                     {
                        "name": "GET_HOSTS_FROM",
                        "value": "env"
                     }
                  ]
               }
            ]
         }
      }
   }
}
